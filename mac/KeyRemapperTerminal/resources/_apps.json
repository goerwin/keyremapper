[
  // Google Chrome
  {
    "keys": ["F3"],
    "when": { "appName": "com.google.Chrome" },
    "send": ["Cmd:down 5 Cmd:up", null]
  },
  {
    "keys": ["F4"],
    "when": { "appName": "com.google.Chrome" },
    "send": ["Cmd:down 6 Cmd:up", null]
  },
  {
    "keys": ["F5"],
    "when": { "appName": "com.google.Chrome" },
    "send": ["Alt:down S Alt:up", null]
  },
  {
    "keys": ["F6"],
    "when": { "appName": "com.google.Chrome" },
    "send": ["Alt:down T Alt:up", null]
  },
  {
    "keys": ["H"],
    "when": { "appName": "com.google.Chrome", "Cmd": true, "Alt": false },
    "send": ["Cmd:down 5 Cmd:up Cmd:down", null]
  },
  {
    "keys": ["L"],
    "when": { "appName": "com.google.Chrome", "Cmd": true, "Alt": false },
    "send": ["Cmd:down 6 Cmd:up Cmd:down", null]
  },
  {
    "keys": ["Semicolon"],
    "when": { "appName": "com.google.Chrome", "Cmd": true },
    "send": ["Cmd:down L Cmd:up Cmd:down", null]
  },
  {
    "keys": ["F"],
    "when": { "appName": "com.google.Chrome", "Cmd": true, "Alt": true },
    "send": ["Alt:up Ctrl:down currentKey Ctrl:up Alt:up", null]
  },
  {
    "keys": ["I"],
    "when": { "appName": "com.google.Chrome", "Cmd": true, "Shift": true },
    "send": ["Shift:up Alt:down I Alt:up Shift:down", null]
  },

  // Terminal

  {
    "keys": ["O"],
    "when": { "appName": "com.googlecode.iterm2", "Cmd": true },
    "send": ["K", null]
  },

  // Slack

  {
    "keys": ["P"],
    "when": { "appName": "com.tinyspeck.slackmacgap", "Cmd": true },
    "send": ["K", null]
  }
]
