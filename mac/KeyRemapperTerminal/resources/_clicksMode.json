[
  {
    "keys": ["C"],
    "when": { "Alt": true, "F18": true },
    "set": { "rightClickMode": true },
    "setOnKeyUp": { "rightClickMode": false },
    "send": ["Alt:up RightClick:down", "RightClick:up"]
    // Using Alt:down at the end is making click behavior to send Alt+click sometimes
    // "send": ["Alt:up RightClick:down", "RightClick:up Alt:down"]
  },
  {
    "keys": ["C"],
    "when": { "Alt": true },
    "set": { "leftClickMode": true },
    "setOnKeyUp": { "leftClickMode": false },
    "send": ["Alt:up LeftClick:down", "LeftClick:up Alt:down"]
  },
  {
    "keys": ["Alt"],
    "when": { "isKeyDown": false, "leftClickMode": true },
    "setOnKeyUp": { "rightClickMode": false },
    "send": [null, "LeftClick:up Alt:up"]
  },
  {
    "keys": ["Alt"],
    "when": { "isKeyDown": false, "rightClickMode": true },
    "setOnKeyUp": { "rightClickMode": false },
    "send": [null, "RightClick:up Alt:up"]
  }
]
