[
  {
    "keys": ["H", "J", "K", "L"],
    "when": { "Caps": true },
    "fire": ["vimArrowKey:down", "vimArrowKey:up"]
  },
  {
    "keys": ["F"],
    "when": { "Caps": true, "F": true },
    "set": { "_vimModeShift": true },
    "fire": ["Shift:down", null]
  },
  {
    "keys": ["F"],
    "when": { "Caps": true, "F": false },
    "set": { "_vimModeShift": false },
    "fire": [null, "Shift:up"]
  },
  {
    "keys": ["Caps"],
    "when": { "Caps": false, "_vimModeShift": true },
    "set": { "_vimModeShift": false },
    "fire": [null, "Shift:up"]
  },
  { "keys": ["Caps"], "fire": [null, null] }
]
